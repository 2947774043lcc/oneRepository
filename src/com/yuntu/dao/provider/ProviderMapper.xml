<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuntu.dao.provider.ProviderMapper">
<select id="getProviderList" resultType="Provider">
    select  * from smbms_provider
</select>
    <insert id="addProvider" parameterType="Provider">
        insert into smbms_provider() values ()
    </insert>
    <update id="updateProvider" parameterType="Provider">
        update smbms_provider set  where id = #{id}
    </update>
    <delete id="deleteProvider" parameterType="Long">
        delete from smbms_provider where id = #{id}
    </delete>
    <resultMap id="providerAndBill" type="Provider">
        <id property="id" column="id"/>
        <result property="proCode" column="proCode"/>
        <result property="proName" column="proName"/>
        <result property="proContact" column="proContact"/>
        <result property="proPhone" column="proPhone"/>
        <collection property="billList" ofType="Bill">
            <id property="id" column="b_id"/>
            <result property="billCode" column="billCode"/>
            <result property="productName" column="productName"/>
            <result property="totalPrice" column="totalPrice"/>
            <result property="isPayment" column="isPayment"/>
        </collection>
    </resultMap>
    <!--<select id="selectProviderAndBill" resultMap="providerAndBill">
        select p.id,p.proCode,p.proName,p.proContact,p.proPhone,b.id AS b_id,b.billCode,b.productName,b.totalPrice,
               b.isPayment
        from smbms_provider p
        LEFT JOIN smbms_bill b
        on p.id = b.providerId
        WHERE p.id=#{providerId}
    </select>-->
    <select id="selectProviderAndBill" resultMap="providerAndBill">
        select p.id,p.proCode,p.proName,p.proContact,p.proPhone,b.id AS b_id,b.billCode,b.productName,b.totalPrice,
               b.isPayment
        from smbms_provider p
                 LEFT JOIN smbms_bill b
                           on p.id = b.providerId
        <where>
            <if test="proName!=null and proName!=''">
                and  p.proName=#{proName}
            </if>
            <if test="providerId!=null">
                and  p.id=#{providerId}
            </if>
        </where>
    </select>
</mapper>