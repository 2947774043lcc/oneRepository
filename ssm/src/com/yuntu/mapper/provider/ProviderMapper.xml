<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yuntu.mapper.provider.ProviderMapper">
    <select id="getProviderCount" resultType="int">
        select count(id) as count from smbms_provider
        <trim prefix="WHERE" prefixOverrides="and|or" suffixOverrides="and|or">
            <if test="queryProCode != null and queryProCode != ''">
                and proCode like concat('%',#{queryProCode},'%')
            </if>
            <if test="queryProName != null and queryProName != ''">
                and proName like concat('%',#{queryProName},'%')
            </if>
        </trim>
    </select>

    <select id="getProviderList" resultType="Provider">
        select * from smbms_provider
        <trim prefix="WHERE" prefixOverrides="and|or" suffixOverrides="and|or">
            <if test="queryProCode != null and queryProCode != ''">
                and proCode like concat('%',#{queryProCode},'%')
            </if>
            <if test="queryProName != null and queryProName != ''">
                and proName like concat('%',#{queryProName},'%')
            </if>
        </trim>
        order by creationDate DESC  limit ${currentPageNo},${pageSize}
    </select>

    <insert id="add" parameterType="Provider">
        insert into smbms_provider (proCode,proName,proContact,proPhone,proAddress,proFax,proDesc,createdBy,creationDate,blPicPath)
        values (#{proCode},#{proName},#{proContact},#{proPhone},#{proAddress},#{proFax},#{proDesc},#{createdBy},#{creationDate},#{blPicPath})
    </insert>

    <update id="updateProvider" parameterType="Provider">
        update smbms_provider set proCode = #{proCode},proName = #{proName},proContact = #{proContact},proPhone = #{proPhone},proAddress = #{proAddress},proFax = #{proFax},proDesc = #{proDesc},modifyBy = #{modifyBy},modifyDate = #{modifyDate} where id = #{id}
    </update>



    <select id="getProviderById" resultType="Provider">
        select * from smbms_provider where id = #{id}
    </select>

    <delete id="deleteProviderById">
        delete from smbms_provider where id = #{id}
    </delete>

</mapper>