<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuntu.mapper.user.UserMapper">

    <resultMap id="oneUser" type="User">
        <id property="id" column="id"/>
        <result property="userName" column="userName"/>
        <result property="userPassword" column="userPassword"/>
        <result property="code" column="userCode"/>
    </resultMap>

<select id="getLoginUser" resultMap="oneUser">
select * from smbms_user where userCode = #{userCode}
</select>


    <select id="getUserCode" resultType="int">
        select count(r.id) as count from smbms_user u,smbms_role r
        <where>
            u.userRole = r.id
        <if test="userName!=null and userName!=''">
            and u.userName like concat('%',#{userName},'%');
        </if>
        <if test="userRole!=null and userRole!=''">
            and u.userRole = #{userRole}
        </if>
        </where>
    </select>


    <resultMap id="UserList" type="User">
        <id property="id" column="id"/>
        <result property="code" column="userCode"/>
        <result property="userName" column="userName"/>
        <result property="gender" column="gender"/>
        <result property="birthday" column="birthday"/>
        <result property="phone" column="phone"/>
        <result property="address" column="address"/>
        <association property="role" javaType="Role">
            <result property="roleName" column="roleName"/>
        </association>
    </resultMap>

    <select id="getUserList" resultMap="UserList">
        select * from smbms_user u,smbms_role r
        <where>
            u.userRole = r.id
            <if test="userName!=null and userName!=''">
                and u.userName like concat('%',#{userName},'%');
            </if>
            <if test="userRole!=null and userRole!=''">
                and u.userRole = #{userRole}
            </if>
            order by u.creationDate DESC  limit #{currentPageNo},#{pageSize}
        </where>
    </select>

    <insert id="add"  parameterType="User">
        insert into smbms_user (userCode,userName,userPassword,
                userRole,gender,birthday,phone,address,creationDate,createdBy,idPicPath,workPicPath)
                values(#{Code},#{userName},#{userPassword},#{userRole},#{gender},#{birthday},#{phone},#{address},#{creationDate},#{createdBy}
                ,#{idPicPath},#{workPicPath})
    </insert>


    <select id="getUserById" resultMap="UserList">
        select * from smbms_user u,smbms_role r
        <where>
            u.userRole = r.id
            <if test="uid!=null and uid!=''">
                and u.id = #{uid}
            </if>
        </where>
    </select>

    <update id="UpdateUser" parameterType="User">
        update smbms_user set userName=#{userName},gender=#{gender},birthday=#{birthday},phone=#{phone},
                              address=#{address},userRole=#{userRole},modifyBy=#{modifyBy},modifyDate=#{modifyDate} where id = #{id}
    </update>

    <delete id="deleteUserById" >
        delete from smbms_user where id = #{uid}
    </delete>

    <update id="updPwd" parameterType="User">
        update smbms_user set userPassword=#{newPwd} where id = #{user.id}
    </update>
    <select id="getCode" resultMap="oneUser">
        select * from smbms_user where userCode = #{code}
    </select>
</mapper>